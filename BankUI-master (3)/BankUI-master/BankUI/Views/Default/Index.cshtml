@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Banker &mdash; Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/banker/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/banker/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/banker/css/jquery-ui.css">
    <link rel="stylesheet" href="~/banker/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/banker/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/banker/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/banker/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="~/banker/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="~/banker/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="~/banker/css/aos.css">

    <link rel="stylesheet" href="~/banker/css/style.css">

</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">


    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>


    <div class="site-wrap">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        
        <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center">

                    <div class="col-6 col-xl-2">
                        <h1 class="mb-0 site-logo"><a href="index.html" class="h2 mb-0">X BANKA<span class="text-primary">.</span> </a></h1>
                    </div>

                    <div class="col-12 col-md-10 d-none d-xl-block">
                        <nav class="site-navigation position-relative text-right" role="navigation">

                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                <li><a href="#home-section" class="nav-link">Anasayfa</a></li>
                                <li class="has-children">
                                    <a href="#about-section" class="nav-link">Hakkımızda</a>
                                    <ul class="dropdown">
                                        <li><a href="#team-section" class="nav-link">Ekip</a></li>
                                        <li><a href="#faq-section" class="nav-link">SSS</a></li>
                                        <li><a href="#gallery-section" class="nav-link">Galeri</a></li>
                                        <li><a href="#services-section" class="nav-link">Hizmetler</a></li>
                                        <li><a href="#testimonials-section" class="nav-link">Görüşler</a></li>
                                    </ul>
                                </li>


                                <li><a href="#contact-section" class="nav-link">İletişim</a></li>
                                <li class="social"><a href="#contact-section" class="nav-link"><span class="icon-facebook"></span></a></li>
                                <li class="social"><a href="#contact-section" class="nav-link"><span class="icon-twitter"></span></a></li>
                                <li class="social"><a href="#contact-section" class="nav-link"><span class="icon-linkedin"></span></a></li>
                            </ul>
                        </nav>
                    </div>


                    <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3"></span></a></div>

                </div>
            </div>

        </header>



        @await Component.InvokeAsync("_PartialSlider")

        <div class="site-section" id="next">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="">
                        <img src="/banker/images/flaticon-svg/svg/001-wallet.svg" alt="Free Website Template by Free-Template.co" class="img-fluid w-25 mb-4">
                        <h3 class="card-title">Para Tasarrufu</h3>
                        <p>Paranızın güvende olduğu, akıllıca yönetildiği ve geleceğinizi şekillendirmeniz için size rehberlik ettiğimiz bir ortak olarak buradayız</p>
                    </div>
                    <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="100">
                        <img src="/banker/images/flaticon-svg/svg/004-cart.svg" alt="Free Website Template by Free-Template.co" class="img-fluid w-25 mb-4">
                        <h3 class="card-title">Online Alışveriş</h3>
                        <p>Online alışveriş deneyiminizi kolaylaştırmak ve güvenli ödeme çözümleri sunmak için buradayız, her türlü alışverişinizi keyifli hale getiriyoruz.</p>
                    </div>
                    <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="200">
                        <img src="/banker/images/flaticon-svg/svg/006-credit-card.svg" alt="Free Website Template by Free-Template.co" class="img-fluid w-25 mb-4">
                        <h3 class="card-title">Kredi / Banka Kartları</h3>
                        <p>Kredi ve banka kartları ile ihtiyaçlarınıza uygun esnek ödeme seçenekleri sunarak finansal özgürlüğünüzü destekliyoruz.</p>
                    </div>

                </div>
            </div>
        </div>

        @await Component.InvokeAsync("_PartialAbout")


        @await Component.InvokeAsync("_PartialTeam")

        <section class="site-section" id="gallery-section" data-aos="fade">


           @* @await Component.InvokeAsync("_PartialGallery")*@

        </section>


        <section class="site-section">
            @await Component.InvokeAsync("_PartialWork")
        </section>




        <section class="site-section border-bottom bg-light" id="services-section">
            @await Component.InvokeAsync("_PartialServices")
        </section>

        <section class="site-section testimonial-wrap" id="testimonials-section" data-aos="fade">
            @await Component.InvokeAsync("_PartialCustomer")
        </section>

        <section class="site-section" id="about-section">
            <div class="container">

                <div class="row">
                    <div class="col-lg-6 mb-5" data-aos="fade-up" data-aos-delay="">
                        <figure class="circle-bg">
                            <img src="/banker/images/hero_1.jpg" alt="Free Website Template by Free-Template.co" class="img-fluid">
                        </figure>
                    </div>
                    <div class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="100">
                        <div class="row">

                            <div class="col-12 mb-4" data-aos="fade-up" data-aos-delay="">
                                <div class="unit-4 d-flex">
                                    <div class="unit-4-icon mr-4 mb-3"><span class="text-primary flaticon-head"></span></div>
                                    <div>
                                        <h3>Banka borcu</h3>
                                        <p>Borçlarınızı kolayca yönetin, mali özgürlüğünüzü sağlayın!</p>
                                        <p class="mb-0"><a href="#">Learn More</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 mb-4" data-aos="fade-up" data-aos-delay="100">
                                <div class="unit-4 d-flex">
                                    <div class="unit-4-icon mr-4 mb-3"><span class="text-primary flaticon-smartphone"></span></div>
                                    <div>
                                        <h3>Bankacılık Danışmanlığı </h3>
                                        <p>Finansal hedeflerinizi gerçekleştirmeniz için uzman bankacılık danışmanlarımız yanınızda.</p>
                                        <p class="mb-0"><a href="#">Learn More</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                </div>


            </div>
        </section>




        <section class="site-section bg-light" id="contact-section" data-aos="fade">
            @*@await Component.InvokeAsync("_PartialContact")*@
        </section>


        <footer class="site-footer">
            @*@await Component.InvokeAsync("_PartialFooter")*@
        </footer>

    </div> <!-- .site-wrap -->

    <script src="~/banker/js/jquery-3.3.1.min.js"></script>
    <script src="~/banker/js/jquery-ui.js"></script>
    <script src="~/banker/js/popper.min.js"></script>
    <script src="~/banker/js/bootstrap.min.js"></script>
    <script src="~/banker/js/owl.carousel.min.js"></script>
    <script src="~/banker/js/jquery.countdown.min.js"></script>
    <script src="~/banker/js/jquery.easing.1.3.js"></script>
    <script src="~/banker/js/aos.js"></script>
    <script src="~/banker/js/jquery.fancybox.min.js"></script>
    <script src="~/banker/js/jquery.sticky.js"></script>
    <script src="~/banker/js/isotope.pkgd.min.js"></script>


    <script src="~/banker/js/main.js"></script>


</body>
</html>